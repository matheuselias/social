<%- model_class = Familium -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:tipo) %></th>
      <th><%= model_class.human_attribute_name(:inforcacoes) %></th>
      <th><%= model_class.human_attribute_name(:renda) %></th>
      <th><%= model_class.human_attribute_name(:enquadramento) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @familia.each do |familium| %>
      <tr>
        <td><%= link_to familium.id, familium_path(familium) %></td>
        <td><%= familium.nome %></td>
        <td><%= familium.tipo %></td>
        <td><%= familium.inforcacoes %></td>
        <td><%= familium.renda %></td>
        <td><%= familium.enquadramento %></td>
        <td><%=l familium.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_familium_path(familium), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      familium_path(familium),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_familium_path,
            :class => 'btn btn-primary' %>
